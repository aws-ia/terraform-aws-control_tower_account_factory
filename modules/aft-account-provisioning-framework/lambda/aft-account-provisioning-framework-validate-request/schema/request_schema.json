{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string"
        },
        "account_request": {
            "type": "object",
            "properties": {
                "control_tower_parameters": {
                    "type": "object",
                    "properties": {
                        "AccountEmail": {
                            "type": "string"
                        },
                        "AccountName": {
                            "type": "string"
                        },
                        "ManagedOrganizationalUnit": {
                            "type": "string"
                        },
                        "SSOUserEmail": {
                            "type": "string"
                        },
                        "SSOUserFirstName": {
                            "type": "string"
                        },
                        "SSOUserLastName": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "AccountEmail",
                        "AccountName",
                        "ManagedOrganizationalUnit",
                        "SSOUserEmail",
                        "SSOUserFirstName",
                        "SSOUserLastName"
                    ]
                },
                "customer_customizations": {
                    "type": "array"
                },
                "account_tags": {
                    "type": "object",
                    "additionalProperties": true,
                    "properties": {}
                }
            },
            "required": [
                "account_tags",
                "control_tower_parameters"
            ]
        },
        "control_tower_event": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
                "source": {
                    "type": "string",
                    "enum": ["aws.controltower"]
                }
            }
        },
        "test_event": {
            "type": "boolean"
        }
    },
    "required": [ "account_request", "control_tower_event" ]
}